    "outDir": "lib",
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "lib/types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "/__tests__/*"
  ]
}
