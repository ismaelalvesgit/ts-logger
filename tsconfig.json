{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
