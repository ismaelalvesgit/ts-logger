{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true
  },
  "include": [
    "./src/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "*/**/__tests__/*"
  ]
}
